---
import "../styles/global.css";
interface Props {
  title: string;
}
const { title = "Sandbox" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="p-10 dark:bg-gray-800">
    <slot />
  </body>
</html>
